<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp1.1;net40;netstandard1.5</TargetFrameworks>
  <ApplicationIcon>sqrtpi.ico</ApplicationIcon>
    <Version>2.3.2</Version>
    <Authors>Thierry Matthey</Authors>
    <Copyright>Copyright © Matthey 2016-2019</Copyright>
    <Company />
    <Product />
    <Description>A collection of mathematical function and data structures written in C#.
Numerical comparison, vector geometry, polynomial, root solver, statistics, GPS and clustering, and abstract bitmap and draw functions.</Description>
    <PackageProjectUrl>https://bitbucket.org/tmatthey/math</PackageProjectUrl>
    <PackageIconUrl>http://matthey.no/sqrtpi.ico</PackageIconUrl>
    <RepositoryUrl></RepositoryUrl>
    <PackageTags>math gps vector segment cluster kdtree dbscan polynomial rootsolver dotnetcore</PackageTags>
    <PackageLicenseUrl>https://mit-license.org/</PackageLicenseUrl>
    <PackageId>Math.Matthey</PackageId>
    <PackageReleaseNotes>Fixed Bezier Curve length</PackageReleaseNotes>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
   </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)'=='netcoreapp1.1'">
    <DefineConstants>NETCOREAPP;NETCOREAPP1_1</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)'=='netstandard1.5'">
    <DefineConstants>NETSTANDARD;NETSTANDARD1_5</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)'=='net40'">
    <DefineConstants>NET;NET40</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|netcoreapp1.1|AnyCPU'">
    <DocumentationFile>Math.xml</DocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|netcoreapp1.1|AnyCPU'">
    <DocumentationFile>Math.xml</DocumentationFile>
  </PropertyGroup>
  <ItemGroup Condition="'$(TargetFramework)'=='netcoreapp1.1'  OR '$(TargetFramework)'=='netstandard1.5'">
    <PackageReference Include="ZKWeb.System.Drawing" Version="3.0.0" />
  </ItemGroup>
    <ItemGroup Condition="'$(TargetFramework)'=='net40' OR '$(TargetFramework)'=='net45' OR '$(TargetFramework)'=='net46'">
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Numerics" />
    </ItemGroup>
    <ItemGroup>
      <PackageReference Include="System.ValueTuple" Version="4.3.0" />
      <PackageReference Include="Vsxmd" Version="1.4.1">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      </PackageReference>
    </ItemGroup>

</Project>
